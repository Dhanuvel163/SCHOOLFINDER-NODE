<html>
    <head>
    <title>schools</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/css/bootstrap.min.css">
    </head>
    <body>
     

            <% if(error&&error.length>0){ %>
                <div class="alert alert-danger" role="alert">
                    <%= error %>
                </div>
            <% } %>
            <% if(success&&success.length>0){ %>
                <div class="alert alert-success" role="alert">
                    <%= success %>
                </div>
            <% } %>
        
    <div class="container">
        <div class="row">
        <h1 style="text-align: center;">EDIT SCHOOL INFORMATION</h1>
        
        <div style="width: 45%;margin: 50px,auto;">
            <form action="/edit/<%= scl._id %>?_method=PUT" method="post">
                <div class="form-group">
                <label for="name">SCHOOL NAME</label>
                <input class="form-control" type="text" name="scl[name]" value="<%=scl.name%>">
                </div>
                <div class="form-group">
                    <label for="description">DESCRIPTION</label>
                <textarea class="form-control" type="text" name="scl[description]" value="<%=scl.description%>"></textarea>
                </div>
                <div class="form-group">
                    <label for="address">ADDRESS</label>
                    <input class="form-control" type="text" name="scl[address]"  value="<%=scl.address%>">
                </div>
                <div class="form-group">
                    <label for="contact">CONTACT</label>
                    <input class="form-control" type="number" name="scl[contact]" value="<%=scl.contact%>">
                </div>
                <div class="form-group">
                    <label for="certification">CERTIFICATION</label>
                    <input class="form-control" type="text" name="scl[certification]" value="<%= scl.certification %>">
                </div>
                <div class="form-group">
                <input type="submit" class="btn btn-primary"value="add">
                </div>
            </form>
        </div>
        </div>    
    
    </body>
</html>